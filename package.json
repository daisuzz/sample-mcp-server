{
  "name": "sample-mcp-server",
  "version": "1.0.0",
  "description": "Collection of Model Context Protocol server implementations",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:stdio": "npm run build --workspace=@mcp-samples/filesystem-stdio",
    "build:http": "npm run build --workspace=@mcp-samples/filesystem-http",
    "start:stdio": "npm run start --workspace=@mcp-samples/filesystem-stdio",
    "start:http": "npm run start --workspace=@mcp-samples/filesystem-http",
    "dev:stdio": "npm run dev --workspace=@mcp-samples/filesystem-stdio",
    "dev:http": "npm run dev --workspace=@mcp-samples/filesystem-http",
    "clean": "rm -rf packages/*/dist shared/dist"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2"
  },
  "keywords": ["mcp", "filesystem", "http", "stdio", "tools", "samples"],
  "author": "daisuzz",
  "license": "MIT"
}
